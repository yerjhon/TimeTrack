@model IEnumerable<MemberShipMVC.Models.ViewsModels.DailyReport>

@{
    ViewBag.Title = "GetReport";
    Layout = null;
}

<link href="~/Content/jquery-ui-1.8.17.custom.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>

<style>
    #tableDaily {
        border: black 1px solid;
    }
    #tableDaily th {
        width : 400px;
        border : black 1px solid;
        text-align : center;
    }
    #tableDaily td {
        width : 400px;
        border : black 1px solid;
        text-align : center;
    }
</style>

<table id ='tableDaily'>

</table>

<table id ="tableDaily">
    <tr>
        <th>
            Date
        </th>
        <th>
            Details
        </th>
        <th>
            Total Hours
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Date.ToString("d")
            </td>
            <td>

              @foreach (var det in item.Details)
              {
                 <p>@det</p>
              }
            </td>
            <td>
                @item.Hours
            </td>
        </tr>
    }
</table>

 @using (Html.BeginForm("ExportData", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
 { 
     <table>
         <tr>
             @Html.Hidden("InitiaDateExport")
             @Html.Hidden("EndDateExport")
             @Html.Hidden("IdUserExport")
             <td><input type="submit" name="Export" id="Export" value="Export"/></td>
         </tr>
     </table>
 }

<script type="text/javascript">
 jQuery(document).ready(function () {

     var idUser = jQuery("#listUsers").val();
     var initDate = jQuery("#dtmInitDate").val();
     var endDate = jQuery("#dtmEndDate").val();

     jQuery("#IdUserExport").val(idUser);
     jQuery("#InitiaDateExport").val(initDate);
     jQuery("#EndDateExport").val(endDate);

 });
</script>

    


